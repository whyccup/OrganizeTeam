.container {
  padding: 20px 12px 0;
}

.team{
  width: 100%;
  min-height: 100px;
  margin: 45px 0 0 0;
  padding: 10px 0 10px 14px;  
  background: #F6E9B2;
  box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 10px;

  position: relative;
}

.team:first-child{
  margin: 20px 0 0 0;
}

.header {
  padding: 50px 0 0 0;
  margin: 0 15px 0 0;

  float: left;
}

.leader {
  width: 70px;
  height: 70px;
  background: #ffffff;
  border: 1px solid #fff;
  border-radius: 50%;

  position: absolute;
  top: -25px;
}

.title {
  width: 70px;
  text-align: center;
}

.participant {
  display: inline-block;
  width: 35px;
  height: 35px;
  background: #FFFFFF;
  border: 1px solid #C15257;
  border-radius: 50%;
  margin-right: 15px;
}

